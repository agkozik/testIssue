<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="LoginSuite" verbose="1" parallel="tests" thread-count="2" >

    <test name="Login-chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="org.thetestingmap.testingchallenges.challenge_1.NegativeFirstNameTest"/>
            <class name="org.thetestingmap.testingchallenges.challenge_2.TypeNotNumericValueTest"/>
            <class name="org.thetestingmap.testingchallenges.challenge_3.OpenHiddenChallengeTest"/>
            <class name="org.thetestingmap.testingchallenges.challenge_4.GenerateTestingDataTest"/>
        </classes>
    </test>

    <test name="Login-firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="org.thetestingmap.testingchallenges.challenge_1.NegativeFirstNameTest"/>
            <class name="org.thetestingmap.testingchallenges.challenge_2.TypeNotNumericValueTest"/>
            <class name="org.thetestingmap.testingchallenges.challenge_3.OpenHiddenChallengeTest"/>
            <class name="org.thetestingmap.testingchallenges.challenge_4.GenerateTestingDataTest"/>
        </classes>
    </test>
</suite>